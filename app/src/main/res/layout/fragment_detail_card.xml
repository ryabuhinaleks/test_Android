<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    style="@style/RootConstraintLayoutStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/topbar_list"
        layout="@layout/topbar"/>

    <ScrollView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/topbar_list"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:padding="0dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/test"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/indentTop"/>

            <LinearLayout
                style="@style/LinearLayoutStyle"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/price"
                    style="@style/TextViewStyle"
                    android:text="Цена"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/place"
                    style="@style/TextViewStyle"
                    android:hint="@string/place"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/area"
                    style="@style/TextViewStyle"
                    android:hint="@string/area"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/count"
                    style="@style/TextViewStyle"
                    android:hint="Количество комнат"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/price2"
                    style="@style/TextViewStyle"
                    android:hint="Цена за кв. м"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/floor"
                    style="@style/TextViewStyle"
                    android:hint="Этаж"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>