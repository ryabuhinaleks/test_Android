<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RootConstraintLayoutStyle">

    <include
        android:id="@+id/topbar_list"
        layout="@layout/topbar"/>

    <ImageView
        android:id="@+id/image"
        style="@style/ImageStyle"
        android:layout_height="250dp"
        android:src="@drawable/ic_default"
        android:background="@color/backgroundCardImage"
        app:layout_constraintTop_toBottomOf="@id/topbar_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/indentTop"
        android:contentDescription="@string/image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            style="@style/LinearLayoutStyle"
            app:layout_constraintTop_toBottomOf="@id/topbar_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/price"
                style="@style/EditTextStyle"
                android:hint="@string/price"
                android:imeOptions="actionNext"
                android:inputType="number" />

            <androidx.cardview.widget.CardView
                android:id="@+id/uploadFile"
                style="@style/CardViewStyle"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/backgroundButtonAddImage">

                    <ImageButton
                        android:id="@+id/btnImage"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_upload"
                        android:contentDescription="@string/image" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/btnImage"
                        android:text="@string/addImage"
                        android:textStyle="italic|bold"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/place"
                style="@style/EditTextStyle"
                android:layout_marginTop="16dp"
                android:hint="@string/place"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/area"
                style="@style/EditTextStyle"
                android:layout_marginTop="16dp"
                android:hint="@string/area"
                android:imeOptions="actionNext"
                android:inputType="number" />

            <EditText
                android:id="@+id/count"
                style="@style/EditTextStyle"
                android:layout_marginTop="16dp"
                android:hint="@string/countRooms"
                android:imeOptions="actionNext"
                android:inputType="number" />

            <EditText
                android:id="@+id/price2"
                style="@style/EditTextStyle"
                android:layout_marginTop="16dp"
                android:hint="@string/priceM"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:inputType="number" />

            <EditText
                android:id="@+id/floor"
                style="@style/EditTextStyle"
                android:layout_marginTop="16dp"
                android:hint="@string/floor"
                android:imeOptions="actionDone"
                android:inputType="number" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>